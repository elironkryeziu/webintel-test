<%= form_with url: "/fill-articles", method: :get do |form| %>
  <button type="submit" class="btn my-3 btn-primary">Read and store the feed</button>
<% end %>


<h1>Articles</h1>


<ul>
  <% @articles.each do |article| %>
    <li>
      <a href="/articles/<%= article.id %>">
        <%= article.title %>
      </a>
    </li>
  <% end %>
</ul>